---
// src/components/Section.astro
interface Props {
  id?: string;
  class?: string;
  containerClass?: string;
}

const { 
  id, 
  class: className = "", 
  containerClass = ""
} = Astro.props;
---

<section id={id} class={`py-16 relative z-10 ${className}`}>
  <div class={`container mx-auto max-w-4xl px-6 md:px-8 backdrop-blur-[5px] rounded-lg ${containerClass}`}>
    <slot />
  </div>
</section>