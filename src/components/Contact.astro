---
import { SITE_CONFIG } from '../data/constants';
import { Icon } from 'astro-icon/components';
import Section from './Section.astro';
import SectionTitle from './SectionTitle.astro';
---

<Section id="contact">
  <SectionTitle>Get in touch</SectionTitle>
  <div class="contact-content">
    <p>
      I am always interested in getting involved in new projects or just connecting with others. Feel free to get in touch!
    </p>
    <div class="contact-links">
      <a href={`mailto:${SITE_CONFIG.email}`} class="contact-link">
        <span class="icon"><Icon name="line-md:email-filled" /></span> {SITE_CONFIG.email}
      </a>
      <a href="https://twitter.com/NicholasStrayer" target="_blank" class="contact-link">
        <span class="icon"><Icon name="line-md:twitter" /></span> @NicholasStrayer
      </a>
      <a href="https://github.com/nstrayer" target="_blank" class="contact-link">
        <span class="icon"><Icon name="line-md:github" /></span> nstrayer
      </a>
      <a href="https://linkedin.com/in/nicholasstrayer" target="_blank" class="contact-link">
        <span class="icon"><Icon name="line-md:linkedin" /></span> LinkedIn
      </a>
    </div>
  </div>
</Section>

<style>
  .contact-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: left;
  }

  .contact-content p {
    margin-bottom: 2rem;
    line-height: 1.8;
  }

  .contact-links {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
    justify-content: flex-start;
  }

  .contact-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    background: var(--background-alt);
    transition: all 0.2s;
  }

  .contact-link:hover {
    background: var(--primary);
    color: white;
  }

  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    width: 1.5rem;
    height: 1.5rem;
  }

  @media (max-width: 768px) {
    .contact-links {
      flex-direction: column;
      align-items: stretch;
    }
  }
</style>