---
import { SITE_CONFIG } from '../data/constants';
import Background from '../components/Background.astro';
import Navigation from '../components/Navigation';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Nick Strayers Personal Website and Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Distinctive serif for headings (Bitter - confident and technical) -->
    <!-- Clean geometric sans for body (DM Sans - modern and readable) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bitter:wght@400;500;600;700;800&family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <Background />
    <Navigation client:load />
    <slot />
    <footer class="footer">
      <p>&copy; {new Date().getFullYear()} {SITE_CONFIG.name}. All rights reserved.</p>
    </footer>
  </body>
</html>

<style is:global>
  html {
    /* DM Sans for body - clean and modern */
    font-family: 'DM Sans', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    scroll-behavior: smooth;
    letter-spacing: -0.01em;
  }

  /* Bitter for all headings - confident serif feel */
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Bitter', Georgia, 'Times New Roman', serif;
    letter-spacing: -0.02em;
  }

  .footer {
    text-align: center;
    padding: 3rem 2rem;
    color: var(--muted-foreground);
    position: relative;
    z-index: 1;
    font-size: 0.875rem;
    border-top: 1px solid var(--border);
  }
</style>
